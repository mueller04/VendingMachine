<Window x:Class="VendingMachine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="InsertCoinBox" HorizontalAlignment="Left" Height="100" Margin="17,45,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ListBox_SelectionChanged"/>
        <Button x:Name="Insert_Coin" Content="Insert Coin" HorizontalAlignment="Left" Margin="17,150,0,0" VerticalAlignment="Top" Width="120" Click="InsertCoin_Click"/>
        <TextBox x:Name="DisplayTextBox" HorizontalAlignment="Left" Height="23" Margin="17,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>

    </Grid>
</Window>
